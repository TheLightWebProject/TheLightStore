{% extends 'base.html.twig' %}

{% block title %}
	Adding Brands
{% endblock %}

{% block body %}
	{% for message in app.flashes('danger') %}
		<div class="alert alert-danger my-2 text-center">{{ message }}</div>
	{% endfor %}
	<div class="border pt-2 mb-2">
		<div class="px-5">
			<h1 class="text-center mb-4">Adding Brand</h1>
			{{ form_start(form_Brand) }}
			{{ form_row(form_Brand.name) }}
			{{ form_row(form_Brand.decrip) }}
			{{ form_row(form_Brand.image) }}
			<div class="text-center">
				<input class="btn btn-primary mb-3" type="submit" value="Add">
			</div>
			{{ form_end(form_Brand) }}
		</div>
	</div>
{% endblock %}
