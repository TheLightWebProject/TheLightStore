{% extends "base.html.twig" %}

{% block body %}
	<!-- home section starts  -->
	<section class="home" id="home" style="background-image: url(Image/home.jpg)">
		<div class="content">
			<h3>TheLight Store</h3>
			<span>
				Luxurious &  elegant
			</span>
			<h4>The quality of our products and the customer experience are always our top priority.</h4>
			<a href="#" class="btn">shop now</a>
		</div>
	</section>
	<!-- home section ends -->


	<!-- about section starts  -->
	<section class="about" id="about">
		<h1 class="heading">
			<span>
				about
			</span>
			us
		</h1>
		<div class="row">
			<div class="video-container">
				<video src="Image/about.mp4" loop autoplay muted></video>
				<h3>TheLight Store</h3>
			</div>
			<div class="content">
				<h3>why choose us?</h3>
				<p></p>
				<p>TheLight Store is one of the largest and most prestigious 2hand stores in Cantho. At The light Store customers will be able to shop comfortably without worrying about price because we always put quality, and user experience first...</p>
				<a href="#" class="btn">learn more</a>
			</div>
		</div>
	</section>
	<!-- about section ends -->


	<!-- icons section starts  -->
	<section class="icons-container">
		<div class="icons">
			<img src="Image/icon-1.png" alt="">
			<div class="info">
				<h3>free delivery</h3>
