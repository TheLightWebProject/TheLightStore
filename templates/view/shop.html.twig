{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div
			class="col-lg-2 col-md-3 ps-0">
			<!-- Navbar -->
			<nav
				class="navbar navbar-expand-md bg-light navbar-light bg-white">
				<!-- Toggle button -->
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidebarMenu">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Brand -->
				<a class="text-decoration-none text-black ps-3" href="index.php">
					<h3>BACH HOA SI</h3>
				</a>
			</nav>
			<!-- Navbar -->

			<!-- Sidebar -->
			<nav id="sidebarMenu" class="collapse d-md-block bg-white">
				<div class="position-sticky">
					<div class="list-group list-group-flush">
						<a href="{{ path('shop') }}" class="list-group-item list-group-item-action py-2">All</a>
						{% for brand in brands %}
							<a href="{{ path('shop', { 'id': brand.id }) }}" class="list-group-item list-group-item-action py-2">{{ brand.name }}</a>
						{% endfor %}
					</div>
				</div>
			</nav>
			<!-- Sidebar -->
		</div>
		<div class="col-lg-10 col-md-9 col-12 pe-0">
			<div id="carouselExampleSlidesOnly" class="carousel slide mb-3 mt-2" data-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100" src="../Image/Fashion-ads-3.jpg" alt="First slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="../Image/Fashion-ads-2.png" alt="Second slide">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="../Image/Fashion-ads-1.jpg" alt="Third slide">
					</div>
				</div>
			</div>
			<section>
				<div class="row">
					{% for product in products %}
						<div class="col-12 col-lg-3 col-sm-6 mb-xl-4">
							<div class="product-grid">
								<div class="product-image">
									<a href="{{ path('view_detail_product', { 'id': product.id }) }}" class="image">
										<img class="img-1" src="{{ path('get_product_photo', {'filename' : product.image} ) }}">
									</a>
								</div>
								<div class="product-content">
									<div class="price">
										<b>${{ product.price }}</b>
									</div>
									<h3 class="title">
										<a href="{{ path('view_detail_product', { 'id': product.id }) }}" class="text-decoration-none">{{ product.name }}</a>
									</h3>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="pagination justify-content-center">
					{{ knp_pagination_render(products, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
				</div>
			</section>
		</div>
	</div>
{% endblock %}
