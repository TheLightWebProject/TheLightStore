{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!
{% endblock %}

{% block body %}
	<div class="container border my-2">
		<form name="frm" method="POST" action="" class="mt-3 mx-md-2">
			<h1 class="text-center mb-4">Order Detail Management</h1>
			<table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
				<thead>
					<tr class="text-center">
						<th>
							<strong>No.</strong>
						</th>
						<th>
							<strong>Product Name</strong>
						</th>
						<!-- <th><strong>Delivery date</strong></th> -->
						<th>
							<strong>Price</strong>
						</th>
						<th>
							<strong>Quantity</strong>
						</th>
						<th>
							<strong>Total</strong>
						</th>
						<th>
							<strong>Image</strong>
						</th>
						{# <th>
																			<strong>Delete</strong>
																		</th> #}
					</tr>
				</thead>

				<tbody>
					{% set count = 1 %}
					{% for orderDetail in orderDetails %}
						<tr>
							<td class="text-center">
								{{ count }}
							</td>
							<td align='center'>{{ orderDetail.name }}</td>
							<td align='center'>${{ orderDetail.price }}</td>
							<td align='center'>{{ orderDetail.quantity }}</td>
							<td align='center'>${{ orderDetail.totalPrice }}</td>
							<td align='center'>
								<a href="{{ path('view_detail_product', { 'id': orderDetail.proID }) }}">
									<img src='{{ path('get_product_photo', {'filename' : orderDetail.image} ) }}' border='0' width="50" height="50"/>
								</a>

							</td>
							{# <td style='text-align:center'>
																						<br>
																						<a href="" onclick="return confirm('Are you sure to delete!')">
																							<i class="bi bi-trash-fill" style="color: red;"></i>
																						</a>
																						<br>
																					</td> #}
						</tr>
						{% set count = count + 1 %}
					{% endfor %}
				</tbody>
			</table>
		</form>
		<div class="text-center mb-3">
			<a href="{{ path('show_all_order') }}" class="btn btn-primary">Back to Order</a>
		</div>
	</div>
{% endblock %}
