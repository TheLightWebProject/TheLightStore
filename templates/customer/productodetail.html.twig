{% extends 'base.html.twig' %}

{% block title %}
  Product Order Detail
{% endblock %}

{% block body %}
  <div class="border my-2">
    <h1 class="text-center mb-4">Product Order Detail</h1>
    <table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="justify-content-md-between justify-content-sm-center align-content-center border-bottom border-2 my-2 bg-dark text-light p-3 rounded-3">
        <tr class="text-center">
          <th>
            <strong>No.</strong>
          </th>
          <th>
            <strong>Product Name</strong>
          </th>
          <!-- <th><strong>Delivery date</strong></th> -->
          <th>
            <strong>Price</strong>
          </th>
          <th>
            <strong>Quantity</strong>
          </th>
          <th>
            <strong>Total</strong>
          </th>
          <th>
            <strong>Image</strong>
          </th>
          {# <th>
						<strong>Delete</strong>
					</th> #}
        </tr>
      </thead>

      <tbody class="justify-content-md-between justify-content-sm-center border-bottom border-2 my-2 bg-light p-2 rounded-3">
        {% set count = 1 %}
        {% for pod in product_ordered_detail %}
          <tr class="text-center">
            <td class="text-center">{{ count }}</td>
            <td>{{ pod.name }}</td>
            <td>${{ pod.price }}</td>
            <td>{{ pod.quantity }}</td>
            <td>${{ pod.totalPrice }}</td>
            <td>
              <a href="{{ path('view_detail_product', { id: pod.proID }) }}"><img src="{{ path('get_product_photo', { filename: pod.image }) }}" width="50" height="50" /></a>
            </td>
            {# <td>
							<a href="{{ path('delele_oreder_detail', { 'id': orderDetail.odID }) }}" onclick="return confirm('Are you sure to delete!')">
								<i class="bi bi-trash-fill" style="color: red;"></i>
							</a>
						</td> #}
          </tr>
          {% set count = count + 1 %}
        {% endfor %}
      </tbody>
    </table>
    <div class="text-center mb-3">
      <a href="{{ path('product_ordered') }}" class="btn btn-primary">Back to Order</a>
    </div>
  </div>
{% endblock %}
