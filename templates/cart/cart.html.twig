{% extends 'base.html.twig' %}

{% block title %}
  Cart
{% endblock %}

{% block body %}
  <link rel="stylesheet" href="{{ asset('css/cart.css') }}" />
  <div class="my-2 border">
    <h2 class="text-center my-3">My Cart</h2>
    {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
      <div class="alert alert-danger text-center mt-2 mb-0">{{ message }}</div>
    {% endfor %}
    <div class="container">
      <table id="cart" class="table table-hover table-condensed">
        <thead>
          <tr>
            <th style="width:50%">Product</th>
            <th style="width:10%">Price</th>
            <th style="width:8%">Quantity</th>
            <th style="width:22%" class="text-center">Total</th>
            <th style="width:10%"></th>
          </tr>
        </thead>
        {% if cart and cartDetails %}
          {% for cartDetail in cartDetails %}
            <tbody>
              <tr>
                <td data-th="Product">
                  <div class="row">
                    <div class="col-12 col-md-4 col-lg-3 hidden-xs d-flex align-items-center">
                      <img src="{{ path('get_product_photo', { filename: cartDetail.image }) }}" alt="" class="img-responsive" width="100" />
                    </div>
                    <div class="col-12 col-md-7 col-lg-8 mt-3 ms-md-3 ms-lg-0">
                      <h4 class="nomargin">{{ cartDetail.name }}</h4>
                      <p>{{ cartDetail.smallDesc }}</p>
                    </div>
                  </div>
                </td>
                <td data-th="Price">${{ cartDetail.price }}</td>
                <td data-th="Quantity">
                  <input type="number" min="1" readonly class="form-control text-center" value="{{ cartDetail.quantity }}" />
                </td>
                <td data-th="Total" class="text-center">${{ cartDetail.totalPrice }}</td>
                <td class="actions" data-th="">
                  <a class="btn btn-danger btn-sm" href="{{ path('remove_cart', { id: cartDetail.id }) }}" onclick="return confirm('Are you sure to delete!')"><i class="bi bi-trash-fill text-white"></i></a>
                </td>
              </tr>
            </tbody>
          {% endfor %}
          <tfoot>
            <tr>
              <td>
                <a href="{{ path('shop') }}" class="btn btn-primary mb-2 mb-md-0"><i class="bi bi-caret-left-fill"></i>Keep Buying</a>
                <a href="{{ path('clear_cart', { id: cart.id }) }}" class="btn btn-warning" onclick="return confirm('Are you sure to clear!')">
                  <i class="bi bi-x-circle-fill"></i>
                  Clear cart
                </a>
              </td>
              <td colspan="2" class="hidden-xs"></td>
              <td class="hidden-xs text-center">
                <strong>Order Total ${{ cart.totalPrice }}</strong>
              </td>
              <td>
                <a href="{{ path('payment') }}" class="btn btn-success btn-block">Order <i class="bi bi-caret-right-fill"></i></a>
              </td>
            </tr>
          </tfoot>
        {% else %}
          <tr>
            <td colspan="5" class="me-4 text-center fw-bold">Cart is empty</td>
          </tr>
        {% endif %}
      </table>
    </div>
  </div>
{% endblock %}
