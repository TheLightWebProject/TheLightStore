{% extends 'base.html.twig' %}

{% block title %}
  Adding Products
{% endblock %}

{% block body %}
  {% for message in app.flashes('danger') %}
    <div class="alert alert-danger my-2 text-center">{{ message }}</div>
  {% endfor %}
  <div class="border pt-3 mb-2">
    <div class="px-5">
      <h1 class="text-center mb-4">Adding Product</h1>
      {{ form_start(form_Product) }}
      {{ form_widget(form_Product) }}
      <div class="text-center">
        <input class="btn btn-primary mb-3" type="submit" value="Add" />
      </div>
      {{ form_end(form_Product) }}
    </div>
  </div>
{% endblock %}
