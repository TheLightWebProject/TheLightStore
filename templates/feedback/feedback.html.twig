{% extends 'base.html.twig' %}

{% block title %}Feedback management
{% endblock %}

{% block body %}
	<style>
		td p {
			width: 500px;
		}
		p.c {
			word-spacing: normal;
		}
	</style>
	{% include "view/management.html.twig" %}
	<div class="border pt-2 mb-2">
		<h1 class="text-center mb-4">Feedback Management</h1>
		<table id="tablecategory" class="table table-striped table-bordered m-0" cellspacing="0" width="100%">
			<thead class="justify-content-md-between justify-content-sm-center align-content-center border-bottom border-2 my-2 bg-dark text-light p-3 rounded-3">
				<tr class="text-center">
					<th>
						<strong>No.</strong>
					</th>
					<th>
						<strong>Content</strong>
					</th>
					<th>
						<strong>Send Date</strong>
					</th>
					<th>
						<strong>Customer Name</strong>
					</th>
					<th>
						<strong>Product name</strong>
					</th>
					<th>
						<strong>Image</strong>
					</th>
					<th>
						<strong>Allow</strong>
					</th>
					<th>
						<strong>Delete</strong>
					</th>
				</tr>
			</thead>
			<tbody class="justify-content-md-between justify-content-sm-center border-bottom border-2 my-2 bg-light p-2 rounded-3">
				{% set count = 1 %}
				{% for feedback in feedbacks %}
					<tr>
						<td class="text-center">{{ count }}</td>
						<td>
							<p class="c">{{ feedback.content }}</p>
						</td>
						<td align="center">{{ feedback.sendDate|date('Y-m-d H:i:s') }}</td>
						<td>{{ feedback.fullname }}</td>
						<td align="center">
							<a class="text-decoration-none" href="{{ path('view_detail_product', { 'id': feedback.proID }) }}">{{ feedback.name }}</a>
						</td>
						<td align='center'>
							<img src='{{ path('get_product_photo', {'filename' : feedback.image} ) }}' border='0' width="50" height="50"/>
						</td>
						<td align="center">
							<form action="/feedback" method="POST">
								<input type="hidden" id="txtFeedID" name="txtFeedID" value="{{ feedback.feedID }}">
								<input type="hidden" id="txtupdateFeed" name="txtupdateFeed" value="{{ feedback.allow }}">
								{% if feedback.allow == 1 %}
									<button type="submit" class="btn btn-success" name="btnUpdateFeedback">
										<i class="bi bi-check-lg"></i>
									</button>
								{% else %}
									<button type="submit" class="btn btn-danger" name="btnUpdateFeedback">
										<i class="bi bi-x-lg"></i>
									</button>
								{% endif %}
							</form>
						</td>
						<td style='text-align:center'>
							<a href="{{ path('delete_feedback', { 'id': feedback.feedID }) }}" onclick="return confirm('Are you sure to delete!')">
								<i class="bi bi-trash-fill" style="color: red;"></i>
							</a>
						</td>
					</tr>
					{% set count = count + 1 %}
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
